@page
@model MoviesApp.Pages.Movies.MoviesModel
@{
    ViewData["Title"] = "List of all movies";
}

<h3 class="text-center text-primary display-4"><strong>@ViewData["Title"]</strong></h3>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Rating</th>
            <th>Last Updated</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var _movie in Model.Movies)
        {
            <tr>
                <td>@_movie.Id</td>
                <td>@_movie.Title</td>
                <td>@_movie.Rating/10</td>
                <td>@_movie.LastUpdated.ToLocalTime().ToString("d/M/yyyy h:mm tt")</td>
                <td><a href="/Movies/@_movie.Id" class="btn btn-outline-secondary">Show Details</a></td>
            </tr>
        }
    </tbody>
</table>

<div style="position: fixed; bottom: 85px; right: 25px;">
    <a href="/Movies/Create" class="btn btn-success">Add Movie</a>
</div>